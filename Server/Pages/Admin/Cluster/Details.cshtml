@page
@model Server.Pages.Admin.Cluster.DetailsModel

@{
	var pageTitle =
		$"{Resources.ButtonCaptions.Details} {Resources.DataDictionary.Cluster}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<section-form>
	<fieldset disabled>
		<section-form-header>
			@(pageTitle)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<section-form-field>
			<label asp-for="ViewModel.Id"></label>
			<input asp-for="ViewModel.Id" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Title"></label>
			<input asp-for="ViewModel.Title" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Description"></label>
			<input asp-for="ViewModel.Description" />
			<span asp-validation-for="ViewModel.Description"></span>
		</section-form-field>
	</fieldset>

	<section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
		<a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForUpdate())
		</a>
		<a asp-page="Delete" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForDelete())
		</a>
	</section-form-footer>
</section-form>
